<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/addBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:hint="Add Book"
        android:inputType="text" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/titolo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:inputType="text" />

    <EditText
        android:id="@+id/autore"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="Author"
        android:inputType="text" />

    <EditText
        android:id="@+id/anno"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="Year"
        android:inputType="text" />

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveBook"
        android:text="Save Book"/>

    <TextView
        android:id="@+id/addFilm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Add Film"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/titoloFilm"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:inputType="text" />

        <EditText
            android:id="@+id/regista"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Director"
            android:inputType="text" />

        <EditText
            android:id="@+id/annoFilm"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Year"
            android:inputType="text" />

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveFilm"
        android:text="Save Film"/>
    <TextView
        android:id="@+id/addMusica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Add Musica"
        android:inputType="text" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/titoloMusica"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:inputType="text" />

        <EditText
            android:id="@+id/cantante"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:hint="Singer"
            android:inputType="text" />

        <EditText
            android:id="@+id/annoMusica"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:hint="Year"
            android:inputType="text" />
        <EditText
            android:id="@+id/genere"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:hint="Type"
            android:inputType="text" />

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveMusic"
        android:text="Save Music"/>

</LinearLayout>